<%= form_with model: @creature do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area  :description %>
  </div>

  <div>
    <%= form.label :active %><br>
    <%= form.check_box :active %>
  </div>

  <div>
    <%= form.submit %><br>
  </div>

<% end %>
