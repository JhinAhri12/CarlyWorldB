<div class="row create">

<%= form_with model: @creature do |form| %>
  <div class="form-group">
    <%= form.label :name, :class=>"form-check-label" %><br>
    <%= form.text_field :name, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, :class=>"form-check-label" %><br>
    <%= form.text_area  :description, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :active, :class=>"form-check-label" %><br>
    <%= form.check_box :active,:class => 'form-check-label' %>
  </div>

  <div class="form-group">
<%= form.label :main_image ,:class=>"form-check-label" %>
<%= form.file_field :main_image, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit  %><br>
  </div>
<% end %>
</div>
